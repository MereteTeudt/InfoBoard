@{
    ViewBag.Title = "Home Page";
}
@model Board.Models.InfoBoardModel
<div class="d-flex flex-wrap my-5 p-2">
    <div class="col-md-12">
        <div class="card Card bg-light">
            <div class="card-body d-flex ">
                <blockquote class="blockquote mb-0 text-center col-10">
                    <p>@Html.DisplayTextFor(model => model.WeeklyTheme.Quote.QuoteText)</p>
                    <footer class="blockquote-footer">
                        <cite title="Source Title">
                            @Html.DisplayTextFor(model => model.WeeklyTheme.Quote.QuoteAuthor)
                        </cite>
                    </footer>
                </blockquote>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card Card bg-light">
            <div class="card-body d-flex ">
                <div class="d-flex justify-content-center col-2">
                    <div class="card-text align-items-center justify-content-center d-flex lead weatherBox">
                        <i class="@Html.DisplayTextFor(model => model.Weather.Icon) align-middle"></i>
                    </div>
                    <h3 class="wi wi-custom-color">@Html.DisplayTextFor(model => model.Weather.Temp)<i class="wi-celsius"></i></h3>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap col-md-12">
        <div class="col-md-6">
            <div class="card Card bg-light">
                <div class="card-body">
                    <h5 class="card-title display-4 text-center">Ugens tema - @Html.DisplayTextFor(model => model.WeeklyTheme.Assembly.AssemblyTheme)</h5>
                    <hr />
                    <img class="rounded mx-auto d-block" src="@Url.Content(Model.WeeklyTheme.Assembly.ImagePath)" alt="Card image cap">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card Card bg-light">
                <div class="d-flex card-body">
                    <div class="col-md-6 p-2">
                        <div id="slideshow" class="carousel slide carousel-fade" data-ride="carousel">
                            <div class="carousel-inner col-md-12 m-0 p-0">
                                <div id="MondaySlide" class="carousel-item active">
                                    <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Monday.ImagePath)" alt="First slide">
                                </div>
                                <div id="TuesdaySlide" class="carousel-item">
                                    <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Tuesday.ImagePath)" alt="Second slide">
                                </div>
                                <div id="WednesdaySlide" class="carousel-item">
                                    <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Wednesday.ImagePath)" alt="Third slide">
                                </div>
                                <div id="ThursdaySlide" class="carousel-item">
                                    <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Thursday.ImagePath)" alt="Fourth slide">
                                </div>
                                <div id="FridaySlide" class="carousel-item">
                                    <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Friday.ImagePath)" alt="Fifth slide">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex flex-wrap p-2">
                        <div class="card-text lead col-md-12">
                            Dagens ret:
                            <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Today.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Today.Name)</a>
                        </div>
                        <hr class="col-md-11 ml-1" />
                        <ul class="list-group col-md-12 align-self-end m-3">
                            <li class="list-group-item text-center lead list-group-item-secondary">Ugens Menu</li>
                            <li class="list-group-item">
                                Mandag -
                                <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Monday.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Monday.Name)</a>
                            </li>
                            <li class="list-group-item">
                                Tirsdag -
                                <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Tuesday.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Tuesday.Name)</a>
                            </li>
                            <li class="list-group-item">
                                Onsdag -
                                <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Wednesday.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Wednesday.Name)</a>
                            </li>
                            <li class="list-group-item">
                                Torsdag -
                                <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Thursday.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Thursday.Name)</a>
                            </li>
                            <li class="list-group-item">
                                Fredag -
                                <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Friday.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Friday.Name)</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card Card bg-light">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-right col-md-12">
    <a class="btn btn-lg btn-outline-secondary" href="@Url.Action("Index", "Administration")">Redigering &#x270E;</a>
</div>
