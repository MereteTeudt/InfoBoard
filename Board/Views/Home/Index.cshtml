@{
    ViewBag.Title = "Home Page";
}
@model Board.Models.InfoBoardModel
<div class="d-flex flex-wrap p-2">
    <div class="col-xl-4">
        <div class="card Card bg-light d-flex flex-wrap wi-custom-color my-3 p-0 weatherBackground border-light">
            <div class="d-flex justify-content-center col-12 text-light">
                <h3 class="wi my-4">Vejle</h3>
                <div class="card-text align-items-center justify-content-center d-flex lead weatherBox my-2 mx-3 wi-custom-size-large">
                    <i id="iconNow" class="@Html.DisplayTextFor(model => model.Forecast.WeatherModels[0].Icon)"></i>
                </div>
                <h3 id="tempNow" class="wi my-4">@Html.DisplayTextFor(model => model.Forecast.WeatherModels[0].Temp)<i class="wi-celsius"></i></h3>
            </div>
            <table class="table align-self-end text-center m-0 bg-light">
                <thead>
                    <tr>
                        <th class="p-0" scope="col">@Html.DisplayTextFor(model => model.Forecast.WeatherModels[1].Day)</th>
                        <th class="p-0" scope="col">@Html.DisplayTextFor(model => model.Forecast.WeatherModels[2].Day)</th>
                        <th class="p-0" scope="col">@Html.DisplayTextFor(model => model.Forecast.WeatherModels[3].Day)</th>
                        <th class="p-0" scope="col">@Html.DisplayTextFor(model => model.Forecast.WeatherModels[4].Day)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="p-0 border-right borderColor">
                            <div class="card-text align-items-center justify-content-center d-flex">
                                <div class="card-text align-items-center justify-content-center d-flex lead wi-custom-size-small">
                                    <i id="icon1" class="@Html.DisplayTextFor(model => model.Forecast.WeatherModels[1].Icon)"></i>
                                </div>
                            </div>
                            <h5 id="temps1" class="wi wi-custom-color my-2">
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[1].TempLow)<i class="wi-celsius"></i> /
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[1].TempHigh)<i class="wi-celsius"></i>
                            </h5>
                        </td>
                        <td class="p-0 border-right borderColor">
                            <div class="card-text align-items-center justify-content-center d-flex">
                                <div class="card-text align-items-center justify-content-center d-flex lead wi-custom-size-small">
                                    <i id="icon2" class="@Html.DisplayTextFor(model => model.Forecast.WeatherModels[2].Icon)"></i>
                                </div>
                            </div>
                            <h5 id="temps2" class="wi wi-custom-color my-2">
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[2].TempLow)<i class="wi-celsius"></i> /
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[2].TempHigh)<i class="wi-celsius"></i>
                            </h5>
                        </td>
                        <td class="p-0 border-right borderColor">
                            <div class="card-text align-items-center justify-content-center d-flex">
                                <div class="card-text align-items-center justify-content-center d-flex lead wi-custom-size-small">
                                    <i id="icon3" class="@Html.DisplayTextFor(model => model.Forecast.WeatherModels[3].Icon)"></i>
                                </div>
                            </div>
                            <h5 id="temps3" class="wi wi-custom-color my-2">
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[3].TempLow)<i class="wi-celsius"></i> /
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[3].TempHigh)<i class="wi-celsius"></i>
                            </h5>
                        </td>
                        <td class="p-0">
                            <div class="card-text align-items-center justify-content-center d-flex">
                                <div class="card-text align-items-center justify-content-center d-flex lead wi-custom-size-small">
                                    <i id="icon4" class="@Html.DisplayTextFor(model => model.Forecast.WeatherModels[4].Icon)"></i>
                                </div>
                            </div>
                            <h5 id="temps4" class="wi wi-custom-color my-2">
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[4].TempLow)<i class="wi-celsius"></i> /
                                @Html.DisplayTextFor(model => model.Forecast.WeatherModels[4].TempHigh)<i class="wi-celsius"></i>
                            </h5>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card Card bg-light">
            <div class="card-body d-flex ">
                <blockquote class="blockquote mb-0 text-center col-12">
                    <h3>Ugens Citat</h3>
                    <hr />
                    <p>@Html.DisplayTextFor(model => model.WeeklyActivities.Quote.QuoteText)</p>
                    <footer class="blockquote-footer">
                        <cite title="Source Title">
                            @Html.DisplayTextFor(model => model.WeeklyActivities.Quote.QuoteAuthor)
                        </cite>
                    </footer>
                </blockquote>
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-lg-12">
        <div class="card Card bg-light">
            <div class="card-body">
                <h3 class="card-title text-center">Denne Uge</h3>
                <hr />
                <div class="d-flex flex-wrap text-center">
                    <div class="col-md-6 col-12 d-flex justify-content-center flex-wrap">
                        <h5 class="col-md-12">Morgensamling: </h5>
                        <h5 class="lead col-md-12">@Html.DisplayTextFor(model => model.WeeklyActivities.Assembly.AssemblyTheme)</h5>
                        <div class="imgBox d-flex align-items-center">
                            <img class="rounded mx-auto d-block img-fluid" src="@Url.Content(Model.WeeklyActivities.Assembly.ImagePath)" alt="Card image cap">
                        </div>
                    </div>
                    <div class="col-md-6 col-12 d-flex justify-content-center flex-wrap">
                        <h5 class="col-md-12">Fredag: </h5>
                        <h5 class="lead col-md-12">@Html.DisplayTextFor(model => model.WeeklyActivities.Friday.Name)</h5>
                        <div class="imgBox d-flex align-items-center">
                            <img class="rounded mx-auto d-block img-fluid" src="@Url.Content(Model.WeeklyActivities.Friday.ImagePath)" alt="Card image cap">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-lg-12">
        <div class="card Card bg-light">
            <div class="d-flex card-body flex-wrap justify-content-center text-center">
                <h3 class="card-title col-xl-12 m-0">
                    Dagens ret:
                    <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Today.RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Today.Name)</a>
                </h3>
                <hr class="col-xl-11 ml-1" />
                <div class="col-md-6 col-8 p-2 d-flex justify-content-center align-items-center">
                    <div class="carousel slide carousel-fade imgBox" data-ride="carousel">
                        <div class="carousel-inner col-xl-12 m-0 p-0">
                            <div id="MondaySlide" class="carousel-item active ">
                                <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Week[0].ImagePath)" alt="First slide">
                            </div>
                            <div id="TuesdaySlide" class="carousel-item ">
                                <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Week[1].ImagePath)" alt="Second slide">
                            </div> 
                            <div id="WednesdaySlide" class="carousel-item ">
                                <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Week[2].ImagePath)" alt="Third slide">
                            </div>
                            <div id="ThursdaySlide" class="carousel-item ">
                                <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Week[3].ImagePath)" alt="Fourth slide">
                            </div>
                            <div id="FridaySlide" class="carousel-item ">
                                <img class="d-block w-100 img-thumbnail" src="@Url.Content(Model.WeeklyMenu.Week[4].ImagePath)" alt="Fifth slide">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-12 d-flex flex-wrap p-2 justify-content-center text-center">
                    <ul class="list-group col-xl-12 align-self-end p-0">
                        <li class="list-group-item text-center lead list-group-item-secondary">Ugens Menu</li>
                        <li class="list-group-item">
                            Mandag -
                            <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Week[0].RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Week[0].Name)</a>
                        </li>
                        <li class="list-group-item">
                            Tirsdag -
                            <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Week[1].RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Week[1].Name)</a>
                        </li>
                        <li class="list-group-item">
                            Onsdag -
                            <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Week[2].RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Week[2].Name)</a>
                        </li>
                        <li class="list-group-item">
                            Torsdag -
                            <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Week[3].RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Week[3].Name)</a>
                        </li>
                        <li class="list-group-item">
                            Fredag -
                            <a href="@Html.DisplayTextFor(model => model.WeeklyMenu.Week[4].RecipePath)">@Html.DisplayTextFor(model => model.WeeklyMenu.Week[4].Name)</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

