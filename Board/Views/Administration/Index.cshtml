
@{
    ViewBag.Title = "Index";
}
@model Board.Models.InfoBoardModel

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Administration</h1>
    </div>
</div>
    <div class="container">
        <div class="">
            <div class="card text-center p-0">
                <div class="card-header">
                    Ugens Tema
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h5 class="card-title">Citat</h5>
                        <div class="d-flex">
                            <div class="col-md-4">
                                <blockquote class="blockquote mb-0">
                                    <p>
                                        @Html.DisplayTextFor(model => model.WeeklyTheme.Quote.QuoteText)
                                    </p>
                                    <footer class="blockquote-footer">
                                        <cite title="Source Title">
                                            @Html.DisplayTextFor(model => model.WeeklyTheme.Quote.QuoteAuthor)
                                        </cite>
                                    </footer>
                                </blockquote>
                            </div>
                            <div class="text-right col-md-8">
                                <button type="button" class="btn btn-primary text-right" data-toggle="modal" data-target="#QuoteModal">
                                    Rediger
                                </button>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <h5 class="card-title">Morgensamling</h5>
                        <div class="d-flex">
                            <div class="col-md-4">
                                <p>
                                    Overskrift: @Html.DisplayTextFor(model => model.WeeklyTheme.Assembly.AssemblyTheme)
                                </p>
                            </div>
                            <div class="col-md-4">
                                <img src="@Html.DisplayTextFor(model => model.WeeklyTheme.Assembly.ImagePath)" alt"Billede" class="img-thumbnail card-img" />
                            </div>
                            <div class="text-right col-md-4">
                                <button type="button" class="btn btn-primary text-right" data-toggle="modal" data-target="#AssemblyModal">
                                    Rediger
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
                <!--Ugens Citat Modal-->
                <div class="modal fade" id="QuoteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Ugens Citat</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-left">
                                @using (Html.BeginForm("EditQuote", "Administration", FormMethod.Post, new { @class = "form-horizontal" }))
                                {
                                    <label for="quoteText" class="col-md-3 control-label">Citat</label>
                                    <div class="form-group col-md-9">
                                        @Html.TextBoxFor(model => model.WeeklyTheme.Quote.QuoteText, new { @class = "form-control" })
                                    </div>
                                    <label for="quoteAuthor" class="col-md-3 control-label">Forfatter</label>
                                    <div class="form-group col-md-9">
                                        @Html.TextBoxFor(model => model.WeeklyTheme.Quote.QuoteAuthor, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <div class="text-right">
                                            <button class="btn btn-info" type="submit">Gem</button>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuller</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--Ugens Morgensamlinger Modal-->
                <div class="modal fade" id="AssemblyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Morgensamling</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-left">
                                @using (Html.BeginForm("EditTheme", "Administration", FormMethod.Post, new { @class = "form-horizontal" }))
                                {
                                    <label for="themeImage" class="col-md-3 control-label">Tema</label>
                                    <div class="form-group col-md-9">
                                        @Html.TextBoxFor(model => model.WeeklyTheme.Assembly.AssemblyTheme, new { @class = "form-control" })
                                    </div>
                                    <label for="quoteAuthor" class="col-md-3 control-label">Billede</label>
                                    <div class="form-group col-md-9">
                                        @Html.TextBoxFor(model => model.WeeklyTheme.Assembly.ImagePath, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <div class="text-right">
                                            <button class="btn btn-info" type="submit">Gem</button>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuller</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Ugens Menu-->
            <div class="card text-center p-0">
                <div class="card-header">
                    Ugens Menu
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h5 class="card-title">Menu</h5>
                        <div class="d-flex">
                            <div class="col-md-10">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <th scope="row">Mandag</th>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Monday.Name)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Monday.RecipePath)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Monday.ImagePath)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Tirsdag</th>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Tuesday.Name)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Tuesday.RecipePath)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Tuesday.ImagePath)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Onsdag</th>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Wednesday.Name)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Wednesday.RecipePath)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Wednesday.ImagePath)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Torsdag</th>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Thursday.Name)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Thursday.RecipePath)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Thursday.ImagePath)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Fredag</th>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Friday.Name)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Friday.RecipePath)</td>
                                            <td>@Html.DisplayTextFor(model => model.WeeklyMenu.Friday.ImagePath)</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="d-flex text-right align-items-end justify-content-end col-md-2">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#MenuModal">
                                    Rediger
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
                <!--Ugens Menu Modal-->
                <div class="modal fade" id="MenuModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Ugens Menu</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-left">
                                @using (Html.BeginForm("EditMenu", "Administration", FormMethod.Post, new { @class = "form-horizontal" }))
                                {
                                    <h5 class="text-center">Mandag</h5>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="Name" class="control-label">Navn</label>
                                            @Html.TextBoxFor(model => model.WeeklyMenu.Monday.Name, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="RecipePath" class="control-label">Opskrift</label>
                                            @Html.TextBoxFor(model => model.WeeklyMenu.Monday.RecipePath, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="ImagePath" class="control-label">Billede</label>
                                            @Html.TextBoxFor(model => model.WeeklyMenu.Monday.ImagePath, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <hr class="col-md-12" />
                                    <h5 class="text-center">Tirsdag</h5>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="Name" class="control-label">Navn</label>
                                            @Html.TextBoxFor(model => model.WeeklyMenu.Monday.Name, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="RecipePath" class="control-label">Opskrift</label>
                                            @Html.TextBoxFor(model => model.WeeklyMenu.Monday.RecipePath, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-4">
